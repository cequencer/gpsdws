{
	"manifest_version": 2,
	"name": "gpsdwscrx",
	"version": "1",
	
	"description": "Implements the HTML5 GeoLocation API piping to gpsd",
	
	"permissions": ["activeTab", "geolocation", "nativeMessaging"],
	
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	
	"browser_action": {
		"default_title": "Share GPS location with page"
	},
	
	"web_accessible_resources": [
		"shim.js"
	]
}
